<style>
  #filters {
    display: flex;
    margin-top: 1rem;
    text-align: center;
    flex-wrap: wrap;
  }
  .filter {
    margin-right: 1rem;
    opacity: 0.7;
  }
  .filter:hover {
    cursor: pointer;
    opacity: 1;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .filter i {
    font-size: 1.5rem;
  }
</style>
<div id="filters">
  <div class="filter">
    <div>
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-mountain-city"></i>
      <p>Iconic Cities</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-mountain"></i>
      <p>Mountain</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-brands fa-fort-awesome-alt"></i>
      <p>Castle</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-person-swimming"></i>
      <p>Pool</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-cow"></i>
      <p>Farm</p>
    </div>
  </div>
  <div class="filter">
    <div>
      <i class="fa-regular fa-snowflake"></i>
      <p>Arctic</p>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListings) { %>
  <a
    class="listing-link card col listing-card"
    style="width: 20rem"
    href="/listings/<%= listing._id %>"
  >
    <img
      style="height: 16rem"
      src="<%= listing.image.url %>"
      class="card-img-top"
      alt="..."
    />
    <div class="card-img-overlay"></div>
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b> <br />
        $<%= listing.price.toLocaleString("en-IN") %> / night
      </p>
    </div>
  </a>
  <% } %>
</div>

